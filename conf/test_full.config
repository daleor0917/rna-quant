/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/fc -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    // TODO: Specify the paths to your full test data (on nf-core/test-datasets or directly in repositories, e.g. SRA)
    // TODO: Give any required params for the test so that command line flags are not needed
    input = "${projectDir}/assets/samplesheet.csv"
    
    // Output directory
    outdir = "results_test_full"

    // featureCounts parameters for full test
    strand_specificity = 0              // unstranded
    feature_type       = "exon"         // -t
    feature_id         = "gene_id"      // -g
    extra_attributes   = "gene_name"    // Example: extract gene names too
    
    // Enable some advanced options for full test
    count_multimapping = true           // Count multi-mapping reads
    count_fractional   = true           // Use fractional counting
}