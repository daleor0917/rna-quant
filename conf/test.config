/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests (featureCounts)
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Run:
        nextflow run . -profile test[,docker|singularity] --outdir results_test
----------------------------------------------------------------------------------------
*/

process {
    // Dejá estos límites simples para el smoke test
    resourceLimits = [
        cpus  : 2,
        memory: '3.GB',
        time  : '30.min'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset for featureCounts'

    // Samplesheet (relativo a la raíz del repo)
    input  = "${projectDir}/assets/samplesheet.csv"

    // Outdir por defecto (podés override con --outdir)
    outdir = "results_test"

    // Flags típicos de featureCounts (pueden overridearse por CLI)
    strandedness = 0   
    feature_type = "exon"      // -t
    attribute    = "gene_id"   // -g
    extra_args   = ""          // ej: "-T 4 -M --fraction"
}