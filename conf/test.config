/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests (featureCounts)
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Run:
        nextflow run . -profile test[,docker|singularity] --outdir results_test
----------------------------------------------------------------------------------------
*/

process {
    // Resource limits for smoke test
    resourceLimits = [
        cpus  : 2,
        memory: '3.GB',
        time  : '30.min'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset for featureCounts'

    // Samplesheet (relative to repo root)
    input  = "${projectDir}/assets/samplesheet.csv"

    // Output directory (can be overridden with --outdir)
    outdir = "results_test"

    // featureCounts parameters for test
    strand_specificity = 0              // unstranded
    feature_type       = "exon"         // -t
    feature_id         = "gene_id"      // -g
    extra_attributes   = ""             
    
    // Keep test simple - no advanced options by default
    count_multimapping = false
    count_fractional   = false
}