/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default Pipeline Parameters
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default values for pipeline parameters
    Can be overridden via command line or params file
----------------------------------------------------------------------------------------
*/

params {
    // ========================================
    // Input/Output Options
    // ========================================
    input                      = null
    outdir                     = './results' 
    publish_dir_mode           = 'copy'
    
    // ========================================
    // Container Options
    // ========================================
    biocontainers_registry     = 'quay.io/biocontainers'
    galaxyproject_registry     = 'https://depot.galaxyproject.org/singularity'
    
    // ========================================
    // Tool Versions
    // ========================================
    subread_version            = '2.0.6--he4a0461_2'
    
    // ========================================
    // featureCounts Options
    // ========================================
    gtf                        = null
    strand_specificity         = 0              // 0=unstranded, 1=forward, 2=reverse
    feature_type               = 'exon'         // -t option (e.g., exon, gene, transcript)
    feature_id                 = 'gene_id'      // -g option (e.g., gene_id, transcript_id)
    extra_attributes           = ''             // Additional attributes to extract
    
    // featureCounts advanced options
    min_overlap                = 1              // Minimum number of overlapping bases
    frac_overlap               = 0              // Minimum fraction of overlapping bases
    count_multimapping         = false          // Count multi-mapping reads (-M)
    count_fractional           = false          // Fractional counting (--fraction)
    count_read_pairs           = false          // Count read pairs instead of reads (-p, auto-detected from meta)
    count_chimeric             = false          // Count chimeric fragments (-C)
    count_primary_only         = false          // Count primary alignments only (--primary)
    
    // ========================================
    // MultiQC Options
    // ========================================
    multiqc_config             = null
    multiqc_logo               = null
    multiqc_methods_description = null
    
    // ========================================
    // Boilerplate Options
    // ========================================
    monochrome_logs            = false
    version                    = false
    validate_params            = true
    
    // ========================================
    // Config Options
    // ========================================
    config_profile_name        = null
    config_profile_description = null
    
    // ========================================
    // Test Data Paths
    // ========================================
    pipelines_testdata_base_path = 'https://raw.githubusercontent.com/nf-core/test-datasets/'
    
    // ========================================
    // Report Options
    // ========================================
    trace_report_suffix        = new java.util.Date().format('yyyy-MM-dd_HH-mm-ss')
}