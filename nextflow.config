/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    nf-core/fc Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default config options for all compute environments
    Modular configuration structure for better maintainability
----------------------------------------------------------------------------------------
*/

// Load modular configuration files in order
includeConfig 'conf/default-params.config'  // Default parameters

// Load global config (check NXF_GLOBAL_CONFIG or use local)
includeConfig(
    System.getenv('NXF_GLOBAL_CONFIG') && new File(System.getenv('NXF_GLOBAL_CONFIG')).exists() 
        ? System.getenv('NXF_GLOBAL_CONFIG') 
        : "${projectDir}/conf/global.config"
)

includeConfig 'conf/version.config'          // Container versions
includeConfig 'conf/docker.config'           // Container engine profiles
includeConfig 'conf/resources.config'        // Resource requirements
includeConfig 'conf/modules.config'          // Module-specific configurations

// Test profiles (container profiles are now in conf/docker.config)
profiles {
    test      { includeConfig 'conf/test.config'      }
    test_full { includeConfig 'conf/test_full.config' }
}

manifest {
    name            = 'nf-core/fc'
    contributors    = [
        // TODO nf-core: Update the field with the details of the contributors to your pipeline. New with Nextflow version 24.10.0
        [
            name: 'dlo',
            affiliation: '',
            email: '',
            github: '',
            contribution: [], // List of contribution types ('author', 'maintainer' or 'contributor')
            orcid: ''
        ],
    ]
    homePage        = 'https://github.com/nf-core/fc'
    description     = """first testing pipeline"""
    mainScript      = 'main.nf'
    defaultBranch   = 'master'
    nextflowVersion = '!>=25.04.0'
    version         = '1.0.0dev'
    doi             = ''
}